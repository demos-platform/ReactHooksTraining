{
  "extends": [
    "airbnb",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "jsx-a11y",
    "prettier",
    // "react-hooks"
  ],
  "rules": {
    // "react-hooks/rules-of-hooks": 2, // Checks rules of Hooks
    // "react-hooks/exhaustive-deps": 1, // Checks effect dependencies
    "semi": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "semi": false
      }
    ]
  }
}